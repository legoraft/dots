{
  "features": {
    "copilot": false
  },
  "theme": "One Dark",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "soft_wrap": "editor_width",
  "format_on_save": "off",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Source Code Pro",
  "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "vim_mode": false,
  "relative_line_numbers": true
}
