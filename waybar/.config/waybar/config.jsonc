{
  "layer": "top",
  "modules-left": [ "clock" ],
  "modules-center": [ "hyprland/workspaces" ],
  "modules-right": [  ],
  
  "clock": {
    "format": "{:%a %d %b %H:%M}",
    "timezone": "Europe/Amsterdam"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "󰖟",
      "2": "",
      "3": "",
      "4": "󰸴",
      "5": "",
      "6": "󰠲",
    },
    "persistent-workspaces": {
      "*": 6
    }
  }
}
