{
  "layer": "top",
  "height": 22,
  "modules-left": [ "group/power", "clock", "custom/updates" ],
  "modules-center": [ "hyprland/workspaces" ],
  "modules-right": [ "group/settings", "network", "battery" ],
  
  "group/power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "power-child"
    },
    "modules": [ "custom/power", "custom/reboot", "custom/logout" ]
  },
  
  "group/settings": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "settings-child",
      "transition-left-to-right": false
    },
    "modules": [ "custom/settings", "backlight", "wireplumber" ]
  },
  
  "custom/updates": {
    "format": " {}",
    "interval": 1800,   
    "exec": "checkupdates | wc -l",
    "tooltip": false
  },
  
  "custom/power": {
    "format": "",
    "tooltip": false,
    "on-click": "shutdown now"
  },
  
  "custom/reboot": {
    "format": "",
    "tooltip": false,
    "on-click": "reboot"
  },
  
  "custom/logout": {
    "format": "󰍃",
    "tooltip": false,
    "on-click": "hyprctl dispatch exit"
  },
  
  "custom/settings": {
    "format": "",
    "tooltip": false
  },
  
  "backlight": {
    "interval": 1,
    "format": "{percent}% 󰌶"
  },
  
  "wireplumber": {
    "format": "{percent}% {icon}",
    "format-icons": [ "", "", "" ],
    "format-muted": ""
  },
  
  "network": {
    "interval": 60,
    "format": "{icon}",
    "format-icons": {
      "wifi": [ "󰤯", "󰤟", "󰤢", "󰤥", "󰤨" ],
      "ethernet": [ "󰌹" ],
      "disconnected": [ "󰌺" ]
    }
  },
  
  "battery": {
    "interval": 60,
    "format": "{icon}",
    "format-icons": [ "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹" ],
    "format-charging": "{capacity}% 󰂄"
  },
  
  "clock": {
    "format": "{:%H:%M}",
    "timezone": "Europe/Amsterdam"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 6
    }
  }
}
