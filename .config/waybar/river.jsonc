{
    "layer": "top",
    "modules-left": [ "custom/search", "river/tags" ],
    "modules-center": [ "river/window" ],
    "modules-right": [ "custom/updates", "network", "battery", "clock", "custom/power" ], // battery can be removed on desktop
    
    "include": [ "~/.config/waybar/default-modules.jsonc" ],
    
    "river/window": {
      "format": "{}"
    },

    "river/tags": {
      "num-tags": 5,
      "tag-labels": ["www", "dev", "tty", "fps", "var"]
    }
}
